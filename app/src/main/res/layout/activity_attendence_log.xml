<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AttendenceLog_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolBar"
            android:background="@color/colorHeader"
            android:id="@+id/attendenceToolBarId">
            <TextView
                android:id="@+id/hrm_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:text="Attendance Log"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBackground"
        android:weightSum="2"
        android:orientation="horizontal">

        <SearchView

            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="47dp"
            android:background="@drawable/border"
            android:layout_marginRight="5dp"
            android:layout_margin="5dp"
            android:clickable="true" />
        <TextView
            android:id="@+id/fromDate_Alog"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="cursive"
            android:hint="End / To Date"
            android:gravity="center"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textSize="15dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/sky"
        android:layout_height="0.5dp"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attendenceLogRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>