<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        tools:context=".EmpInfo_detiles_Activity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ToolBar"
                android:background="@color/colorHeader"
                android:id="@+id/employeeInfoDetailsToolBarId">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee Details"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/rowColor"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@drawable/bg_custom_row"
                        android:backgroundTint="@color/rowColor">

                        <TextView
                            android:id="@+id/personDetiles_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Group"
                            android:textColor="@color/colorHeader"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                android:clickable="false"
                android:background="@android:color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/emp_name_detiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-light"
                        android:padding="2dp"
                        android:text="Donner name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/dept_desig_detiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donner name"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:id="@+id/reports_detiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donner name"
                        android:textSize="14sp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                android:clickable="false"
                android:background="@android:color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_centerHorizontal="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="2dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:background="@drawable/bg_custom_row"
                            android:backgroundTint="@color/rowColor">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:src="@drawable/ic_phone_call"
                                android:padding="5dp"/>
                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile number:"
                            android:paddingBottom="2dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            />
                        <TextView
                            android:id="@+id/mobile_no_deiles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Designation name"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/rowColor"/>
                    <LinearLayout
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="2dp"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:gravity="center"
                                android:background="@drawable/bg_custom_row"
                                android:backgroundTint="@color/rowColor">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:src="@drawable/ic_phone_call"
                                    android:padding="5dp"/>
                            </RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Emergency Contact number:"
                                android:paddingBottom="2dp"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:id="@+id/emergency_mobileNO_detiles"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Designation name"
                                android:textSize="16sp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rowColor"/>

                    <LinearLayout
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="2dp"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:gravity="center"
                                android:background="@drawable/bg_custom_row"
                                android:backgroundTint="@color/rowColor">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:src="@drawable/ic_email"
                                    android:padding="5dp"/>
                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email(Personal):"
                                android:paddingBottom="2dp"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:id="@+id/email_pers_detiles"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Designation name"
                                android:textSize="16sp"
                                android:textIsSelectable="true"
                                android:textColor="@color/colorPrimary"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rowColor"/>
                    <LinearLayout
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="2dp"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:gravity="center"
                                android:background="@drawable/bg_custom_row"
                                android:backgroundTint="@color/rowColor">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:src="@drawable/ic_email"
                                    android:padding="5dp"/>
                            </RelativeLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email(Official):"
                                android:paddingBottom="2dp"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:id="@+id/email_office_detiles"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Designation name"
                                android:textSize="16sp"
                                android:textIsSelectable="true"
                                android:textColor="@color/colorPrimary"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/rowColor"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:weightSum="5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/bg_custom_row"
                    android:backgroundTint="@color/rowColor">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/ic_home_location"
                        android:padding="5dp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:paddingBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/address_detiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee address"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rowColor"/>


        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:weightSum="5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/bg_custom_row"
                    android:backgroundTint="@color/rowColor">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/ic_calender"
                        android:padding="5dp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Joining Date:"
                    android:paddingBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/joinDate_detiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Joining Date:"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rowColor"/>

        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:weightSum="5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/bg_custom_row"
                    android:backgroundTint="@color/rowColor">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/ic_employee_info"
                        android:padding="5dp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PABX:"
                    android:paddingBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/pabx_detiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Joining Date:"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/rowColor"/>

        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:weightSum="5"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/bg_custom_row"
                    android:backgroundTint="@color/rowColor">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/ic_blood_bank"
                        android:padding="5dp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Group:"
                    android:paddingBottom="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/blood_Grp_detiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Group:"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>