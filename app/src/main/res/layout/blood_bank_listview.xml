<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:clickable="false"
    android:background="@android:color/white">
    <LinearLayout
        android:id="@+id/blood_bank_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_custom_row"
                android:backgroundTint="@color/rowColor">
                <TextView
                    android:id="@+id/donner_blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Group"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorHeader"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/blood_donner_name"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donner name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/donner_desig_name"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="desg name"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/donner_dept_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Department name"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/blood_donner_number"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/call_btn_linerLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:backgroundTint="@color/rowColor"
                    android:background="@drawable/bg_custom_row">
                    <ImageView
                        android:id="@+id/call_donner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_phone_call"
                        android:padding="5dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>