<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Chalan_Report_Details_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolBar"
            android:background="@color/colorHeader"
            android:id="@+id/myTeamAttendenceToolBarId">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chalan Report(Detail)"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/rowColor"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chalanReportDetails_customer_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_dropdown_arro_24"
            android:paddingVertical="10dp"
            android:paddingStart="10sp"
            android:text="Select Customer"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/rowColor"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chalanReportDetails_Group_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_dropdown_arro_24"
            android:paddingVertical="10dp"
            android:paddingStart="10sp"
            android:text="Select Group"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/rowColor"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/chalanReportDetails_item_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_dropdown_arro_24"
            android:paddingVertical="10dp"
            android:paddingStart="10sp"
            android:text="Select Item Name"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:weightSum="5"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/rowColor"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity=""
                android:text="From Date"
                android:textSize="16dp"
                android:paddingVertical="10sp"
                android:paddingLeft="10sp"
                android:textColor="@color/colorHeader"
                android:textStyle="bold"
                android:hint="Start / From Date" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">
            <TextView
                android:id="@+id/chalanReportDetails_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:textSize="16dp"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:textColor="@color/colorHeader"
                android:hint=" From Date"
                android:drawableRight="@drawable/ic_calender"
                android:paddingRight="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:weightSum="5"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/rowColor"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity=""
                android:text="To Date"
                android:textSize="16dp"
                android:paddingVertical="10sp"
                android:paddingLeft="10sp"
                android:textColor="@color/colorHeader"
                android:textStyle="bold"
                android:hint="Start / From Date" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">
            <TextView
                android:id="@+id/chalanReportDetails_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:textSize="16dp"
                android:paddingVertical="10dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:textColor="@color/colorHeader"
                android:hint="To Date"
                android:drawableRight="@drawable/ic_calender"
                android:paddingRight="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorHeader"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:paddingLeft="10sp"
                android:text="Qty#"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:paddingLeft="10sp"
                android:text="Unit"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorHeader"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:paddingLeft="10sp"
                android:text="Amount"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/chalanReportDetails_result_listView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="#D3D1D1"
            android:dividerHeight="1dp"
            />
    </LinearLayout>

</LinearLayout>